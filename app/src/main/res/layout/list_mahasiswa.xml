<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_no"
            android:layout_centerVertical="true"
            android:textSize="50sp"
            android:textColor="@color/colorAccent"
            android:text="@string/no"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_no"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_toEndOf="@id/text_no"
            android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/text_nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nim"/>

        <TextView
            android:id="@+id/text_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nama"/>

        <TextView
            android:id="@+id/text_prodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prodi"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_menu_option"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:contentDescription="@string/cont_desc_mahasiswa"
            app:srcCompat="@drawable/ic_more_vert"
            tools:ignore="VectorDrawableCompat"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>